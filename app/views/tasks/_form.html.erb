<%= form_for(@task) do |f| %>
  <div class="form-group form-inline">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group form-inline">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

   <div class="form-group form-inline">
    <%= f.label :completed %>
    <%= f.check_box :completed %>

  </div>

  <%= f.submit class: 'btn btn-info' %>
<% end %>
